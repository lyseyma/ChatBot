<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/auth_background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="@dimen/activity_padding">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/image_description"
                android:scaleType="centerInside"
                android:src="@drawable/boot_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/boot"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_first_name"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="match_parent"
                    android:hint="@string/first_name"
                    android:textColor="@color/color_fffffff"
                    android:textColorHint="@color/color_fffffff"
                    android:drawableEnd="@drawable/ic_close"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="@dimen/edit_text_padding"
                    android:padding="@dimen/edit_text_padding"
                    android:layout_marginEnd="@dimen/edit_text_padding"
                    android:background="@drawable/round_border_edit_text"
                    android:textSize="@dimen/font_size_16dp" />

                <EditText
                    android:id="@+id/edt_last_name"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:hint="@string/last_name"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_fffffff"
                    android:textColorHint="@color/color_fffffff"
                    android:drawableEnd="@drawable/ic_close"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="@dimen/edit_text_padding"
                    android:padding="@dimen/edit_text_padding"
                    android:textSize="@dimen/font_size_16dp"
                    android:background="@drawable/round_border_edit_text" />
            </LinearLayout>

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:hint="@string/email"
                android:layout_height="wrap_content"
                android:textColor="@color/color_fffffff"
                android:textColorHint="@color/color_fffffff"
                android:drawableEnd="@drawable/ic_close"
                android:drawableStart="@drawable/ic_mail"
                android:drawablePadding="@dimen/edit_text_padding"
                android:padding="@dimen/edit_text_padding"
                android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                android:textSize="@dimen/font_size_16dp"
                android:background="@drawable/round_border_edit_text" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:hint="@string/password"
                android:layout_height="wrap_content"
                android:textColor="@color/color_fffffff"
                android:textColorHint="@color/color_fffffff"
                android:drawableEnd="@drawable/ic_close"
                android:drawableStart="@drawable/ic_key"
                android:drawablePadding="@dimen/edit_text_padding"
                android:padding="@dimen/edit_text_padding"
                android:textSize="@dimen/font_size_16dp"
                android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                android:background="@drawable/round_border_edit_text" />

            <EditText
                android:id="@+id/edt_confirm_password"
                android:layout_width="match_parent"
                android:hint="@string/confirm_password"
                android:layout_height="wrap_content"
                android:textColor="@color/color_fffffff"
                android:textColorHint="@color/color_fffffff"
                android:drawableEnd="@drawable/ic_close"
                android:drawableStart="@drawable/ic_key"
                android:drawablePadding="@dimen/edit_text_padding"
                android:padding="@dimen/edit_text_padding"
                android:textSize="@dimen/font_size_16dp"
                android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                android:background="@drawable/round_border_edit_text" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                android:background="@color/colorPrimary"
                android:text="@string/create_new_account"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:text="@string/already_have_an_account"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txt_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_in"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>